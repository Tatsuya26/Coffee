<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:backgroundTintMode="screen"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rautenticacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:fontFamily="@font/marko_one"
        android:gravity="center"
        android:text="@string/auth"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="95sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/rusernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rautenticacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:autofillHints="name"
        android:text="Username"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/rusernameBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rusernameText"
        android:layout_marginTop="10dp"
        android:autofillHints="name"
        android:background="#56FDFAFA"
        android:backgroundTint="#DDCECE"
        android:gravity="center"
        android:hint="Escreve aqui o teu username"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/rPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rusernameBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:autofillHints="name"
        android:text="Password"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/rPasswordBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rPasswordText"
        android:layout_marginTop="10dp"
        android:autofillHints="password"
        android:background="#56FDFAFA"
        android:backgroundTint="#DDCECE"
        android:gravity="center"
        android:hint="Escreve aqui a tua password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rPasswordBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:autofillHints="name"
        android:text="Email"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:layout_marginTop="10dp"
        android:autofillHints="password"
        android:background="#56FDFAFA"
        android:backgroundTint="#DDCECE"
        android:gravity="center"
        android:hint="Escreve aqui o teu email"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="TouchTargetSizeCheck" />
    <ImageButton
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="Button for login"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        tools:ignore="TouchTargetSizeCheck" />
</RelativeLayout>